{
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "outDir": "lib",
    "module": "CommonJS",
    "target": "es6",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "lib": ["ES2020", "DOM", "ES2015", "ESNext"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
